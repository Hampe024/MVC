{% extends "base/base.html.twig" %}
{% block title %}Game{% endblock %}

{% block content %}

SPEL

{% if result_button is defined %}
    <form method="post">
        <input type="submit" name="getResult" value="Få resultat">
    </form>
{% else %}

    <div class="cards">
        {{ cards ?? ""}}
    </div>

    {{ player_cards_sum ?? ""}}
    <div class="player_cards_box">
        <div class="player_cards">
            {{ player_cards ?? ""}}
        </div>
    </div>

    <form method="post">
        {% if new_card_button == true %}
            <input type="submit" name="newCard" value="Ett till kort">
        {% else %}
            Du fick för mycket poäng!
        {% endif %}
    </form>

    <form method="post">
        <input type="submit" name="done" value="Klar">
    </form>

    <br><br>

    {{ game_over ?? "" }}

    <br><br><br><br>

    <form method="post">
        <input type="submit" name="kill_sess" value="kill session">
    </form>


    {{ debug ?? "" }}
    {{ debug2 ?? "" }}
{% endif %}

{{ include('base/flash-messages.html.twig') }}
{% endblock %}
